<html t:type="layout" title="Wijzig wachtwoord" hideNav="prop:tempPassword"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">

    <t:form t:id="changePasswordForm">
        <t:label for="oldPasswordField"/>
        <t:textfield type="password" value="oldPassword" t:validate="required" t:id="oldPasswordField" label="Oude wachtwoord"/><br/>
        
        <t:label for="newPasswordField"/>
        <t:textfield type="password" value="newPassword" t:validate="required" t:id="newPasswordField" label="Nieuwe wachtwoord"/><br/>
        
        <t:label for="confirmPasswordField"/>
        <t:textfield type="password" value="ConfirmNewPassword" t:validate="required" t:id="confirmPasswordField" label="Bevestig wachtwoord"/><br/>
        
        <t:submit value="Opslaan" class="btn btn-warning"/>
    </t:form>    
    
</html>